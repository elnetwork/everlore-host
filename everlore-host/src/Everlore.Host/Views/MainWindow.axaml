<Window x:Class="Everlore.Host.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        x:CompileBindings="True"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:core="using:Everlore.Core.Common"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:views="using:Everlore.Host.Views"
        xmlns:vm="using:Everlore.Host.ViewModels"
        Icon="/Assets/logo.ico"
        TransparencyLevelHint="AcrylicBlur"
        Height="500" Width="700"
        Background="#141414">

  <Grid ColumnDefinitions="Auto,*">

    <!-- Module bar -->
    <views:ModuleBarView Grid.Column="0" Grid.Row="0" />

    <!-- Module space -->
    <ContentControl prism:RegionManager.RegionName="{x:Static core:HostRegion.ModuleSpace}" Grid.Column="1" />
  </Grid>
</Window>
