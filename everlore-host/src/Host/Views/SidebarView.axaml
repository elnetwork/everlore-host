<UserControl x:Class="Everlore.Host.Views.SidebarView"
             x:CompileBindings="True"
             x:DataType="vm:SidebarViewModel"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Everlore.Host.ViewModels"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:icons="using:Everlore.Core.Themes"
             Width="{Binding FlyoutWidth}">

  <UserControl.Styles>
    <Style Selector="Button">
      <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style Selector="PathIcon">
      <Setter Property="Margin" Value="0,0,10,0" />
    </Style>
  </UserControl.Styles>

  <DockPanel>

    <!-- Dock the hamburger menu button to the top with no text -->
    <Button DockPanel.Dock="Top"
            Command="{Binding FlyoutSidebarCommand}"
            ToolTip.Tip="Expand/Collapse"
            Height="25">
      <StackPanel Orientation="Horizontal">
        <PathIcon Data="{StaticResource {x:Static icons:Icons.Hamburger}}" />
        <TextBlock Text="" />
      </StackPanel>
    </Button>

    <!-- Dock the Settings button to the bottom -->
    <Button DockPanel.Dock="Bottom" Command="{Binding SettingsCommand}" ToolTip.Tip="Settings">
      <StackPanel Orientation="Horizontal">
        <PathIcon Data="{StaticResource {x:Static icons:Icons.Settings}}" />
        <TextBlock Text="Navigation Sample" />
      </StackPanel>
    </Button>

    <ScrollViewer>
      <ItemsControl ItemsSource="{Binding ModuleItems}">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <StackPanel Orientation="Vertical" />
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Button Command="{Binding NavigateCommand}"
                    ToolTip.Tip="{Binding Title}">
              <StackPanel Orientation="Horizontal">
                <PathIcon Data="{Binding Icon}" />
                <TextBlock Text="{Binding Title}" />
              </StackPanel>
            </Button>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>
  </DockPanel>
</UserControl>
