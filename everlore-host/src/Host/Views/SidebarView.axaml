<UserControl x:Class="Everlore.Host.Views.SidebarView"
             x:CompileBindings="True"
             x:DataType="vm:SidebarViewModel"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Everlore.Host.ViewModels"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:icons="using:Everlore.Core.Themes"
             Width="40">

  <UserControl.Styles>
    <Style Selector="Button">
      <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style Selector="PathIcon">
      <Setter Property="Margin" Value="0,0,10,0" />
    </Style>
  </UserControl.Styles>

  <DockPanel>
    <!-- Dock the Settings button to the bottom -->
    <Button Command="{Binding SettingsCommand}" ToolTip.Tip="Settings"
            DockPanel.Dock="Bottom">
      <PathIcon Data="{StaticResource {x:Static icons:Icons.Settings}}" />
    </Button>

    <ScrollViewer>
      <ItemsControl ItemsSource="{Binding ModuleItems}">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <StackPanel Orientation="Vertical" />
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Button Command="{Binding NavigateCommand}"
                    ToolTip.Tip="{Binding Title}">
              <PathIcon Data="{Binding Icon}" />
            </Button>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>
  </DockPanel>
</UserControl>
