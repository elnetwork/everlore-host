<UserControl x:Class="Everlore.Host.Views.SettingsView"
             x:CompileBindings="True"
             x:DataType="vm:SettingsViewModel"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Everlore.Host.ViewModels;assembly=Everlore.Host"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Background="#141414" >

  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Spacing="5">
      <Grid ColumnDefinitions="Auto, *">
        <TextBlock Text="{Binding Title}"
                   Grid.Column="1"
                   Margin="5"
                   VerticalAlignment="Center"
                   FontWeight="Bold" />
      </Grid>
    </StackPanel>

    <!-- Main Content -->
    <ScrollViewer Margin="5">
      <StackPanel Spacing="10">
        <Label Content="Click the button below to navigate to the sub page" />
        <Button Content="Navigate using Journaling" Command="{Binding CmdNavigateToChild}" />
      </StackPanel>
    </ScrollViewer>
  </DockPanel>
</UserControl>