<UserControl x:Class="Everlore.Hero.Shell.Views.HeroMenuBarView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:icons="using:Everlore.Core.Themes"
             xmlns:views="using:Everlore.Hero.Shell.Views"
             xmlns:vm="using:Everlore.Hero.Shell.ViewModels"
             x:DataType="vm:HeroMenuBarViewModel"
             x:CompileBindings="True">
    
    <StackPanel Orientation="Horizontal">
        <Button Command="{Binding $parent[views:HeroMainView].((vm:HeroMainViewModel)DataContext).FlyoutSidebarCommand, FallbackValue={x:Null}}"
                Background="Transparent"
                Height="24">
            <PathIcon Data="{StaticResource {x:Static icons:Icons.Hamburger}}" />
        </Button>
        
        <Menu>
            <MenuItem Header="_File">
                <MenuItem Header="_Open..."/>
                <Separator/>
                <MenuItem Header="_Exit"/>
            </MenuItem>
            <MenuItem Header="H_ome">
            </MenuItem>
            <MenuItem Header="_View">
            </MenuItem>
            <MenuItem Header="_Help">
            </MenuItem>
        </Menu>
    </StackPanel>
</UserControl>
