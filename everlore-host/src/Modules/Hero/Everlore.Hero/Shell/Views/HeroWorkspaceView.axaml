<UserControl x:Class="Everlore.Hero.Shell.Views.HeroWorkspaceView"
             x:Name="ViewRoot"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:views="using:Everlore.Hero.Shell.Views"
             xmlns:common="using:Everlore.Hero.Common"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Background="#141414">
    
    <Grid ColumnDefinitions="Auto,*" RowDefinitions="*,Auto">
        <!-- Side bar -->
        <Panel Margin="4 0 0 0" Grid.Row="0" Grid.Column="0">

            <!-- The SidebarView is not using a region on purpose, so it shows in designer mode
                <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.SidebarRegion}" /> -->
            <views:SidebarView />
        </Panel>

        <!-- Workspace -->
        <ContentControl prism:RegionManager.RegionName="{x:Static common:RegionName.Content}"
                        Grid.Row="0" Grid.Column="1" />
    </Grid>
</UserControl>
