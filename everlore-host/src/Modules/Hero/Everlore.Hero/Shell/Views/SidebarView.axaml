<UserControl x:Class="Everlore.Hero.Shell.Views.SidebarView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="using:Everlore.Hero.Shell.Views"
             xmlns:icons="using:Everlore.Core.Themes"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:vm="using:Everlore.Hero.Shell.ViewModels"
             prism:ViewModelLocator.AutoWireViewModel="True"
             x:DataType="vm:HeroRibbonViewModel"
             x:CompileBindings="True"
             Width="{Binding $parent[views:HeroMainView].((vm:HeroMainViewModel)DataContext).FlyoutWidth, FallbackValue=200}">
    
    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="Padding" Value="10 8 8 8" />
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="TextBlock">
            <Setter Property="Margin" Value="16 0 0 0"></Setter>
        </Style>
        <Style Selector="PathIcon">
            <Setter Property="Width" Value="16"></Setter>
            <Setter Property="Height" Value="16"></Setter>
        </Style>
    </UserControl.Styles>

    <Panel Background="#26282B">
        <Border BorderThickness="0 0 1 0"
                    BorderBrush="DarkSlateGray">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Vertical">
                    <Button>
                        <StackPanel Orientation="Horizontal">
                            <PathIcon Data="{StaticResource {x:Static icons:Icons.Main}}" />
                            <TextBlock Text="Main" />
                        </StackPanel>
                    </Button>
                    <Button>
                        <StackPanel Orientation="Horizontal">
                            <PathIcon Data="{StaticResource {x:Static icons:Icons.Bookmark}}" />
                            <TextBlock Text="Bookmarks" />
                        </StackPanel>
                    </Button>
                    <Button>
                        <StackPanel Orientation="Horizontal">
                            <PathIcon Data="{StaticResource {x:Static icons:Icons.Delete}}" />
                            <TextBlock Text="Deleted items" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <Separator />
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <Button>
                            <StackPanel Orientation="Horizontal">
                                <PathIcon Data="{StaticResource {x:Static icons:Icons.Tag}}" />
                                <TextBlock Text="Tag 1" />
                            </StackPanel>
                        </Button>
                        <Button>
                            <StackPanel Orientation="Horizontal">
                                <PathIcon Data="{StaticResource {x:Static icons:Icons.Tag}}" />
                                <TextBlock Text="Tag 2" />
                            </StackPanel>
                        </Button>
                        <Button>
                            <StackPanel Orientation="Horizontal">
                                <PathIcon Data="{StaticResource {x:Static icons:Icons.Tag}}" />
                                <TextBlock Text="Tag 3" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Border>
    </Panel>
</UserControl>
