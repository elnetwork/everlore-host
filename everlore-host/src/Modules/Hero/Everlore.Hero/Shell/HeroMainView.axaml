<UserControl x:Class="Everlore.Hero.Shell.HeroMainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:shell="using:Everlore.Hero.Shell"
             xmlns:common="using:Everlore.Hero.Common"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Background="#141414">
    
    <DockPanel>
        <!-- Menu bar -->
        <shell:MenuBarView DockPanel.Dock="Top" />
        
        <!-- Command bar -->
        <shell:CommandBarView HorizontalContentAlignment="Stretch" DockPanel.Dock="Top" />
        
        <Grid ColumnDefinitions="Auto,*" RowDefinitions="*,Auto">
            <!-- Side bar -->
            <Panel Grid.Row="0" Grid.Column="0" Background="#26282B">

                <!-- The SidebarView is not using a region on purpose, so it shows in designer mode
                <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.SidebarRegion}" /> -->
                <shell:SideBarView />
            </Panel>

            <!-- Workspace -->
            <ContentControl prism:RegionManager.RegionName="{x:Static common:RegionName.Content}"
                            Grid.Row="0" Grid.Column="1" />
        </Grid>
    </DockPanel>
</UserControl>
