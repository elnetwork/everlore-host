<!-- Typography.axaml -->
<!-- Purpose: Defines font families, sizes, weights and line heights used application-wide. -->
<!-- These values are referenced in styles and ControlThemes for consistent typography. -->

<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Placeholder typography scale -->
    <x:Double x:Key="FontSizeH1">32</x:Double>
    <x:Double x:Key="FontSizeH2">24</x:Double>
    <x:Double x:Key="FontSizeBody">14</x:Double>
    <x:Double x:Key="FontSizeCaption">12</x:Double>

    <!-- Default font family (can be overridden per platform if needed) -->
    <FontFamily x:Key="DefaultFontFamily">Segoe UI, sans-serif</FontFamily>

    <!-- Weights -->
    <FontWeight x:Key="FontWeightRegular">Normal</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
    <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>

</ResourceDictionary>