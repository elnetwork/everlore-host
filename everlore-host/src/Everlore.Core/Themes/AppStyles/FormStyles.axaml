<!-- FormStyles.axaml -->
<!-- Purpose: Styles for form elements (labels, groups, fields, help text) applied via Classes -->

<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style Selector="TextBlock.form-label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

    <Style Selector="TextBlock.help-text">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{DynamicResource TextTertiaryBrush}"/>
    </Style>

</Styles>