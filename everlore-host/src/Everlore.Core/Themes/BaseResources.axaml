<!-- BaseResources.axaml -->
<!-- Purpose: Defines the core color palette, brushes and semantic colors used across the entire application. -->
<!-- These resources use ThemeDictionaries for Light/Dark mode support and are referenced with DynamicResource. -->

<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <!-- Placeholder colors - replace with your brand palette -->
            <Color x:Key="PrimaryColor">#0066CC</Color>
            <Color x:Key="AccentColor">#0078D4</Color>
            <Color x:Key="DangerColor">#C42B1C</Color>
            <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource PrimaryColor}"/>
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <!-- Placeholder colors for dark mode -->
            <Color x:Key="PrimaryColor">#4DA6FF</Color>
            <Color x:Key="AccentColor">#60A5FA</Color>
            <Color x:Key="DangerColor">#FF6B5E</Color>
            <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource PrimaryColor}"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <!-- Fallback neutral -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0066CC"/>

</ResourceDictionary>